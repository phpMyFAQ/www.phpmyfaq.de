root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.scss]
indent_size = 2

[{*.ts,*.tsx}]
indent_size = 2
tab_width = 2

[{*.cjs,*.js,*.jsx,*.mjs}]
indent_size = 2
tab_width = 2

[{*.json,*.jsonc,.babelrc,.eslintrc,.prettierrc,.stylelintrc}]
indent_size = 2
